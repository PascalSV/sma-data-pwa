{
    "name": "sma-data-pwa",
    "version": "1.0.0",
    "description": "Solar meter API and PWA for Cloudflare Workers",
    "type": "module",
    "scripts": {
        "build": "npm run build:api && npm run build:pwa",
        "dev:api": "wrangler dev --config api/wrangler.toml",
        "dev:pwa": "wrangler dev --config pwa/wrangler.toml",
        "build:api": "tsc --project api/tsconfig.json --noEmit",
        "build:pwa": "tsc --project pwa/tsconfig.json --noEmit",
        "deploy:api": "wrangler deploy --config api/wrangler.toml",
        "deploy:pwa": "wrangler deploy --config pwa/wrangler.toml",
        "deploy": "npm run deploy:api && npm run deploy:pwa",
        "type-check": "tsc --noEmit && tsc --project api/tsconfig.json --noEmit && tsc --project pwa/tsconfig.json --noEmit"
    },
    "dependencies": {
        "hono": "^4.0.0"
    },
    "devDependencies": {
        "@cloudflare/workers-types": "^4.20250101.0",
        "wrangler": "^4.54.0",
        "typescript": "^5.3.3",
        "tsx": "^4.7.0",
        "esbuild": "^0.20.0"
    }
}